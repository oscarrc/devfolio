---
import { isDev } from "../../utils/environment";

// Only accessible in development mode
if (!isDev()) {
  return new Response("Not found", { status: 404 });
}

interface Props {
  title?: string;
}

const { title = "Portfolio Studio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@3.9.4/dist/full.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #121212;
        color: #e2e8f0;
        font-family: "Space Mono", monospace;
      }
    </style>
  </head>
  <body>
    <header class="border-b border-gray-700">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <h1 class="text-xl font-bold text-theme-accent">Portfolio Studio</h1>
          <nav>
            <ul class="flex space-x-4">
              <li>
                <a href="/studio-app" class="hover:text-theme-accent"
                  >Dashboard</a
                >
              </li>
              <li><a href="/" class="hover:text-theme-accent">View Site</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-gray-700 mt-12">
      <div class="container mx-auto px-4 py-4 text-center text-sm">
        <p>Studio Mode - Development Only</p>
      </div>
    </footer>
  </body>
</html>
