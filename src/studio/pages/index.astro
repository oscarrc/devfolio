---
import { isDev } from "../../utils/environment";
import StudioLayout from "../../studio/layouts/StudioLayout.astro";
---

<StudioLayout activeItem="dashboard">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Dashboard</h1>
    <div class="badge badge-primary">
      {isDev() ? "Development" : "Production"}
    </div>
  </div>

  <div class="stats bg-base-200 shadow mb-8 w-full">
    <div class="stat">
      <div class="stat-title">Projects</div>
      <div class="stat-value">0</div>
      <div class="stat-desc">Portfolio items</div>
    </div>

    <div class="stat">
      <div class="stat-title">Blog Posts</div>
      <div class="stat-value">0</div>
      <div class="stat-desc">Published articles</div>
    </div>

    <div class="stat">
      <div class="stat-title">Skills</div>
      <div class="stat-value">0</div>
      <div class="stat-desc">Technologies</div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Quick Actions</h2>
        <div class="grid grid-cols-2 gap-4 mt-4">
          <a href="/studio/projects/new" class="btn btn-primary">New Project</a>
          <a href="/studio/blog/new" class="btn btn-secondary">New Blog Post</a>
          <a href="/studio/deploy" class="btn btn-accent">Deploy Site</a>
          <a href="/studio/site" class="btn">Edit Settings</a>
        </div>
      </div>
    </div>

    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Recent Activity</h2>
        <div class="opacity-70 mt-4">
          <div class="alert">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="stroke-info shrink-0 w-6 h-6"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path></svg
            >
            <span>No recent activity found. Start creating content!</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 mt-8">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Getting Started</h2>
        <p class="mt-4">
          Welcome to the Studio! This is where you can manage your portfolio
          content and settings.
        </p>

        <ul class="steps steps-vertical mt-6">
          <li class="step step-primary">Create your first project</li>
          <li class="step">Write a blog post</li>
          <li class="step">Customize your site settings</li>
          <li class="step">Deploy your site</li>
        </ul>
      </div>
    </div>
  </div>
</StudioLayout>
